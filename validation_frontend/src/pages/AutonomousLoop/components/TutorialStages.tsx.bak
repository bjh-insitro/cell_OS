                        <div className={`absolute bottom - full left - 1 / 2 - translate - x - 1 / 2 mb - 2 w - 48 p - 2 rounded - lg shadow - xl text - xs z - 50 pointer - events - none opacity - 0 group - hover: opacity - 100 transition - opacity duration - 200 ${isDarkMode ? 'bg-slate-800 border border-slate-600 text-slate-200' : 'bg-white border border-zinc-200 text-zinc-600'} `}>
