  },
  "resolution_rules": {
    "order_of_precedence": [
      "design.replicate_tiles[].assignment",
      "design.distributed_replicates.sets[].assignment",
      "global_defaults.default_assignment"
    ],
    "derived_fields": {
      "cell_line": "from cell_lines.row_to_cell_line"
    }
  },
  "analysis_questions": [
    "How much variance is local (tile) vs global (scatter)?",
    "Do quadrant effects remain after spatial correction?",
    "Is anchor variance dominated by biology or by measurement noise?",
    "What replication level is needed to resolve a given effect size?"
  ],
  "run_notes": [
    "To estimate day effects, run this exact template on 2 different days and treat day as a random effect in a mixed model."
  ]
}
